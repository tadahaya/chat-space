.all
  / .notice グループを作成しました
  .side-bar
    %header
      %h3
        = current_user.name
      .header__icons
        = link_to new_group_path do
          =fa_icon 'pencil-square-o', class: 'icon'
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog' , class: 'icon'
    = render "shared/group"
  .chat
    .group-header
      .group-header__samary
        group名
        .group-header__name
          %ul
            Member:
            %li name1
            %li name2
      .group-header__edit Edit
    / .message-area
    .messages
      = render @messages
    / .form
    /   .form__area
    /     %input.form__textbox{:placeholder => "type a message", :type => "text", :name => "message[content]"}
    /     %label
    /       %span::before
    /         %i.fa.fa-picture-o.my-white
    /     %input.form__submit{:type => "submit", :name => "commit", :value => "Send"}
    / IDが自動的に付与される仕様(new_group)

    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
